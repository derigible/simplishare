<%= form_tag('/auth/identity/callback', {:class => 'form-horizontal vert-center-form'}) do %>
  <h1>Welcome to SimpliShare</h1>
  <p>Sign in to continue, or <a href="/auth/identity/register">register</a> now.</p>
  <div class="form-group">
    <div class="col-3">
      <label class="form-label" for="input-email">Identifier</label>
    </div>
    <div class="col-9">
      <input class="form-input" id="input-email" name="auth_key" type="text" placeholder="Email or Username">
    </div>
  </div>
  <div class="form-group">
    <div class="col-3">
      <label class="form-label" for="input-password">Password</label>
    </div>
    <div class="col-9">
      <input class="form-input" id="input-password" name="password" type="password" placeholder="Password" >
    </div>
  </div>
  <div class="container text-center">
    <button class="btn btn-lg">Login</button>
  </div>
<% end %>
<p>Click <a href="/logins/forgot_password">here</a> if you forgot your password.</p>
<p>Click <a href="/logins/resend_confirmation">here</a> if you need to resend your confirmation.</p>
