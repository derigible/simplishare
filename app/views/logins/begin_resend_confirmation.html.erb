<%= form_tag('/logins/resend_confirmation', {:class => 'form-horizontal vert-center-form'}) do %>
  <h1>Welcome to SimpliShare</h1>
  <p>Enter the Login and Password you used to sign up to resend your confirmation.</p>
  <div class="form-group">
    <div class="col-3">
      <label class="form-label" for="input-email">Identifier</label>
    </div>
    <div class="col-9">
      <input class="form-input" id="input-email" name="identifier" type="text" placeholder="Email or Username">
    </div>
  </div>
  <div class="form-group">
    <div class="col-3">
      <label class="form-label" for="input-password">Password</label>
    </div>
    <div class="col-9">
      <input class="form-input" id="input-password" name="password" type="password" placeholder="Password" >
    </div>
  </div>
  <div class="container text-center">
    <button class="btn btn-lg">Resend Confirmation</button>
  </div>
<% end %>
<div style="margin-top: 1.5rem">
  <a class="btn btn-lg" href="/auth/identity">Back to Login</a>
</div>
