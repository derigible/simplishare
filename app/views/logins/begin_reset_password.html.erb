<%= form_tag('/logins/reset_password', {:class => 'form-horizontal vert-center-form'}) do %>
  <h1>Welcome to SimpliShare</h1>
  <p>Fill out the form below to reset your password</p>
  <div class="form-group">
    <div class="col-3">
      <label class="form-label" for="input-password">Password</label>
    </div>
    <div class="col-9">
      <input class="form-input" id="input-password" name="password" type="password" placeholder="Password" >
    </div>
  </div>
  <div class="form-group">
    <div class="col-3">
      <label class="form-label" for="input-password_confirmation">Confirm Password</label>
    </div>
    <div class="col-9">
      <input class="form-input" id="input-password_confirmation" name="password_confirmation" type="password" placeholder="Confirm Password" >
    </div>
  </div>
  <%= hidden_field_tag(:reset_password_token, @reset_password_token) %>
  <div class="container text-center">
    <button class="btn btn-lg">Reset</button>
  </div>
<% end %>
<div style="margin-top: 1.5rem">
  <a class="btn btn-lg" href="/auth/identity">Back to Login</a>
</div>
